    script(type='text/javascript').
      $(document).ready(function() {
        console.log('Autocomplete ready!');
      });

      $("#autocomplete-profesor").autocomplete({
        source: function(req, resp){
          $.ajax({
            method: "GET",
            url: "/cursos/crear/profesor",
            dataType: "json",
            data: {
            term: req.term
            },
            success: function(data) {
              console.log(data)
              resp(data);
            }
          });
        },
        change: function(event,ui){
          if (!ui.item){
            $(this).val('');
          }
        }
      });

      $("#autocomplete-estudiante").autocomplete({
        source: function (req, resp) {
          $.ajax({
            method: "GET",
            url: "/cursos/estudiantes",
            dataType: "json",
            data: {
              term: req.term
            },
            success: function (data) {
              console.log(data)
              resp(data);
            }
          });
        },
        change: function (event, ui) {
          if (!ui.item) {
            $(this).val('');
          }
        }
      });