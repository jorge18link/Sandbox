doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SandBox - Administrador
    link(href='/public/sandbox/css/bootstrap.min.css', rel='stylesheet')
    link(href='/public/sandbox/css/datepicker3.css', rel='stylesheet')
    link(href='/public/sandbox/css/styles.css', rel='stylesheet')
    // Icons
    script(src='/public/sandbox/js/lumino.glyphs.js')
    style(type='text/css').
      .sb-ejer{
      background-color: rgba(0,0,0,0.3);
      padding-left: 20px;
      padding-bottom: 20px;
      }
      .sb-ejer h3{
      color:orange;
      }
      .sb-desc{
      padding-top: 20px;
      padding-right: 10px;
      padding-left: 10px;
      overflow-y:scroll;
      height: 56vh;
      }
      .cursos{
      background-color: rgba(255,255,255,0.8);
      margin-top: 10px;
      }
      .cursos p{
      color: black;
      font-size: large;
      }
      #body-pan{
      background-color: #9BD0F5;
      }
      #pane-techo{
      background-color: #5094C4;
      color: white;
      }
      .titulo{
        margin-top: 10px;
      }
      .btn.btn-lg.btn-primary.dale{
        margin-top:10px;
        margin-bottom:10px;
      }
      .form-control{
      max-width: 550px
      }
  body
    //Navigation
      ==========================================
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='../index.html')
            span SandBox
            | Administrador
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                svg.glyph.stroked.male-user
                  use(xlink:href='#stroked-male-user')
                |  Fernando Sánchez Zambrano
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='#')
                    svg.glyph.stroked.male-user
                      use(xlink:href='#stroked-male-user')
                    |  Ver mi perfil
                li
                  a(href='#')
                    svg.glyph.stroked.cancel
                      use(xlink:href='#stroked-cancel')
                    |  Cerrar Sesión
      // /.container-fluid
    #sidebar-collapse.col-sm-3.col-lg-2.sidebar
      ul.nav.menu
        h3(style='margin-top: 17px; padding-left: 10px;') Usuarios
        li
          a(href='/users/crear')
            svg.glyph.stroked.blank.document
              use(xlink:href='#stroked-blank-document')
            | Crear Usuario
        li
          a(href='/users')
            svg.glyph.stroked.folder
              use(xlink:href='#stroked-folder')
            | Usuarios
        li.divider(role='presentation')
        h3(style='margin-top: 17px; padding-left: 10px;') Cursos
        li.active
          a(href='/cursos/crear')
            svg.glyph.stroked.blank.document
              use(xlink:href='#stroked-blank-document')
            | Crear Curso
        li
          a(href='/cursos')
            svg.glyph.stroked.folder
              use(xlink:href='#stroked-folder')
            | Cursos
        li.divider(role='presentation')
        li
          a(href='#')
            svg.glyph.stroked.male-user
              use(xlink:href='#stroked-male-user')
            |  Perfil
    // /.sidebar
    .col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2.main
      .row
        ol.breadcrumb
          li
            a(href='#')
              svg.glyph.stroked.home
                use(xlink:href='#stroked-home')
          li.active Cursos
      // /.row
      br
      .row
        .col-lg-12
          // ============Aqui Trabajo================
          .panel.panel-default
            #pane-techo.panel-heading.col-md-12 Nuevo Curso
            #body-pan.panel-body
              .cursos.col-md-4
                form(method='post', action='/cursos/crear')
                  p.titulo Paralelo:
                  input.form-control(type='number', name='paralelo', placeholder='Paralelo', min='1')
                  p.titulo Profesor:
                  input.form-control(type='text', name='profesor', placeholder='Profesor')
                  //p.titulo Estudiantes:
                  //input.form-control(type='text', name='estudiantes', placeholder='Estudiantes')
                  button.btn.btn-lg.btn-primary.dale(type='submit', name='go')  Crear
          // ============/Aqui Trabajo================
        // /.row
      // /.row
    // /.main
    script(src='/public/sandbox/js/jquery-1.11.1.min.js')
    script(src='/public/sandbox/js/bootstrap.min.js')
    script(src='/public/sandbox/js/chart.min.js')
    script(src='/public/sandbox/js/easypiechart.js')
    script(src='/public/sandbox/js/bootstrap-datepicker.js')
    script(type='text/javascript', src='/public/sandbox/js/index.js')