doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SandBox - Estudiantes
    link(href='/public/sandbox/css/bootstrap.min.css', rel='stylesheet')
    link(href='/public/sandbox/css/styles.css', rel='stylesheet')
    // Icons
    script(src='/public/sandbox/js/lumino.glyphs.js')
    style(type='text/css').
      .sb-ejer{
      background-color: rgba(0,0,0,0.3);
      padding-left: 20px;
      padding-bottom: 20px;
      }
      .sb-ejer h3{
      color:orange;
      }
      .sb-desc{
      padding-top: 20px;
      padding-right: 10px;
      padding-left: 10px;
      height: 77vh;
      }
      .ejercicios{
      background-color: rgba(255,255,255,0.8);
      }
      .ejercicios p{
      color: black;
      font-size: large;
      }
      #body-pan{
      background-color: #9BD0F5;
      }
      #pane-techo{
      background-color: #5094C4;
      color: white;
      }
      .form-control{
      max-width: 550px
      }
  body
    //
      Navigation
      ==========================================
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/inicio')
            span.rol
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                svg.glyph.stroked.male-user
                  use(xlink:href='#stroked-male-user')
                label.nombreUser
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/perfil')
                    svg.glyph.stroked.male-user
                      use(xlink:href='#stroked-male-user')
                    |  Ver mi perfil
                li
                  a(href='/logout')
                    svg.glyph.stroked.cancel
                      use(xlink:href='#stroked-cancel')
                    |  Cerrar Sesión
      // /.container-fluid
    #sidebar-collapse.col-sm-3.col-lg-2.sidebar
      ul.nav.menu
        h3(style='margin-top: 17px; padding-left: 10px;') Usuarios
        li
          a(href='/users')
            svg.glyph.stroked.folder
              use(xlink:href='#stroked-folder')
            | Usuarios
        li.active
          a(href='/users/crear')
            svg.glyph.stroked.blank.document
              use(xlink:href='#stroked-blank-document')
            | Crear Usuario
        li.divider(role='presentation')
        h3(style='margin-top: 17px; padding-left: 10px;') Cursos
        li
          a(href='/cursos')
            svg.glyph.stroked.folder
              use(xlink:href='#stroked-folder')
            | Cursos
        li
          a(href='/cursos/crear')
            svg.glyph.stroked.blank.document
              use(xlink:href='#stroked-blank-document')
            | Crear Curso
        li.divider(role='presentation')
        h3(style='margin-top: 17px; padding-left: 10px;') Reportes
        li
          a(href='/reportes')
            svg.glyph.stroked.line-graph
              use(xlink:href='#stroked-line-graph')
            |  Por día
        li
          a(href='/reportes-curso')
            svg.glyph.stroked.notepad
              use(xlink:href='#stroked-notepad')
            |  Por curso
        li.divider(role='presentation')
        li
          a(href='/perfil')
            svg.glyph.stroked.male-user
              use(xlink:href='#stroked-male-user')
            |  Perfil
    // /.sidebar
    .col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2.main
      .row
        ol.breadcrumb
          li
            a(href='/inicio')
              svg.glyph.stroked.home
                use(xlink:href='#stroked-home')
          li.active Usuarios
      // /.row
      br
      .row
        .col-lg-12
          // ============Aqui Trabajo================
          .panel.panel-default
            #pane-techo.panel-heading.col-md-12 Crear Usuarios
            #body-pan.panel-body
              .sb-desc.col-md-12.col-sm-12
                form(method='post', action='/users/crear')
                  .form-group
                    label Email
                    input.form-control(name='CorreoElectronico', type='email', placeholder='Introduzca email')
                  .form-group
                    label Rol
                    select.selectedRol.form-control(type='text', name='Rol')
                      option(value='Administrador') Administrador
                      option(value='Profesor') Profesor
                      option(value='Estudiante') Estudiante
                      option(value='Ayudante') Ayudante
                    input.tipoIdent.form-control(type='text', name='TipoDeIdentificacion')
                  .form-group
                    label Identificacion
                    input.ident.form-control(type='text', name='Identificacion', placeholder='Introduzca Identificación')
                  .form-group
                    label Nombres
                    input.form-control(name='Nombres', type='text', placeholder='Introduzca nombres')
                  .form-group
                    label Apellidos
                    input.form-control(name='Apellidos', type='text', placeholder='Introduzcas apellidos')
                  .form-group.groupCarrera
                    label Carrera
                    input.inputCarrera.form-control(name='Carrera', type='text', placeholder='Introduzca carrera')
                  button.btn.btn-default(type='submit') Crear
          // ============/Aqui Trabajo================
        // /.row
      // /.row
    // /.main
    script(src='/public/sandbox/js/jquery-1.11.1.min.js')
    script(src='/public/sandbox/js/bootstrap.min.js')
    script(src='/public/js/mostrar-Usuario.js')
    script(src='/public/js/form-crearUsuario.js')