doctype html
html
  head
    //
      Basic Page Needs
      ==================================================
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Sandbox - Profesores
    //
      Stylesheet
      ==================================================
    link(href='/public/sandBox/css/bootstrap.min.css', rel='stylesheet')
    link(href='/public/sandBox/css/styles.css', rel='stylesheet')
    script(src='/public/sandBox/js/lumino.glyphs.js')
    //
      Embedded Stylesheet
      ==================================================
    style(type='text/css').
      .insNovato{
          width: 200px;
          margin-bottom: 8px;
          margin-top: 20px;
      }
      .insPro{
          width: 200px;
          margin-bottom: 8px;
          margin-top: 20px;
      }
      .insExperto{
          width: 200px;
          margin-bottom: 8px;
          margin-top: 20px;
      }
      .insIndestrucible{
          width: 200px;
          margin-bottom: 8px;
          margin-top: 20px;
      }
      .insDuroDeMatar{
          width: 200px;
          margin-bottom: 8px;
          margin-top: 20px;
      }
      .insRapYFurioso{
          width: 200px;
          margin-bottom: 8px;
          margin-top: 20px;
      }
      .alert{
        margin-top: 20px;
      }
  body
    //
      Navigation
      ==========================================
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/inicio')
            span.rol
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                svg.glyph.stroked.male-user
                  use(xlink:href='#stroked-male-user')
                label.nombreUser 
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/perfil')
                    svg.glyph.stroked.male-user
                      use(xlink:href='#stroked-male-user')
                    |  Ver mi perfil
                li
                  a.cambiaContra
                    svg.glyph.signia.thin-wood-pencil
                      use(xlink:href='#signia-thin-wood-pencil')
                    | Cambiar Contraseña
                li
                  a(href='/logout')
                    svg.glyph.stroked.cancel
                      use(xlink:href='#stroked-cancel')
                    |  Cerrar Sesión
      // /.container-fluid
    #sidebar-collapse.col-sm-3.col-lg-2.sidebar
      h2(style='margin-top: 17px; padding-left: 10px;') Perfil
      ul.nav.menu
        li.liPerfil.active
          a(href='/perfil')
            svg.glyph.stroked.male-user
              use(xlink:href='#stroked-male-user')
            |  Perfil
        li.liPass
          a.cambiaContra
            svg.glyph.stroked.pencil
              use(xlink:href='#stroked-pencil')
            | Cambiar Contraseña
        li.divider(role='presentation')
        li
          a(href='/logout')
            svg.glyph.stroked.cancel
              use(xlink:href='#stroked-cancel')
            | Cerrar Sesion
        
    // /.sidebar
    //
      Active Page
      ==========================================
    .col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2.main
      .row
        ol.breadcrumb
          li
            a(href='#')
              svg.glyph.stroked.home
                use(xlink:href='#stroked-home')
          li.active Usuario
      // /.row
        Perfil Header
        ==========================================
      .row.present(style='margin-bottom: 20px')
        .col-md-6.text-center.inUsuario
          img.img-circle.team-img(src='/public/img/icon.png', alt='...', style='width: 100px; height: 100px; margin-top: 30px; border: black 1px solid;')
          h2.nombreUser(style='margin-bottom: 0px;') 
          h3.correo(style='margin-top: 0px; margin-bottom: 0px;')
          h4.rol(style='margin-top: 0px; margin-bottom: 0px;')
        .col-md-6.puntaje
          h2 Tus records:
          h3 Número de ejercicios Resueltos: 
            label.numResueltos
          h3 Tu puntaje: 
            label.puntuacion
      .row
        ol.breadcrumb
            li
                a(href='#')
                svg.glyph.stroked.home
                    use(xlink:href='#stroked-home')
            li.titulo Tus insignias
        .row.divInsignias
            .novato.col-md-4.text-center(hidden="true")
                img.insNovato(src='/public/img/i00.png')
                br
                p Novato
            .pro.col-md-4.text-center(hidden="true")
                img.insPro(src='/public/img/i01.png')
                br
                p Pro
            .experto.col-md-4.text-center(hidden="true")
                img.insExperto(src='/public/img/i02.png')
                br
                p Experto
            .indestructible.col-md-4.text-center(hidden="true")
                img.insIndestrucible(src='/public/img/i03.png')
                br
                p Indestructible
            .duroDeMatar.col-md-4.text-center(hidden="true")
                img.insDuroDeMatar(src='/public/img/i04.png')
                br
                p Duro de matar
            .rapidoFurioso.col-md-4.text-center(hidden="true")
                img.insRapYFurioso(src='/public/img/i06.png')
                br
                p Rápido y furioso
        .row.CambioContra
          .row
            .CambioContra.col-md-6.col-md-offset-3
              .header
                h3
                  | Cambiar Contraseña
                  span.extra-title.muted
                hr
              .form
                .form-group.row
                  label.col-sm-3.col-form-label Contraseña Anterior: 
                  .col-sm-9
                    input#old_password.form-control(type='password', name='old_password')
                .form-group.row
                  label.col-sm-3.col-form-label New Password
                  .col-sm-9
                    input#new_password.form-control(type='password', name='new_password')
                .form-group.row
                  label.col-sm-3.col-form-label(for='confirm_password') Confirmar Contraseña
                  .col-sm-9
                    input#confirm_password.form-control(type='password', name='confirm_password')
                  .errorC
                    p Las contraseñas no coinciden
                button#password_modal_save.btn.btn-primary(href='#') Guardar
                br
                .alert.alert-success#alertaExito
                  #mensajeAlertaExito
                .alert.alert-warning#alertaWarning
                  #mensajeAlerta

    //
      Javascripts
      ==================================================
    script(src='/public/sandBox/js/jquery-1.11.1.min.js')
    script(src='/public/sandBox/js/bootstrap.min.js')
    script(src='/public/js/mostrar-insignias.js')
    script(src='/public/js/mostrar-Usuario.js')