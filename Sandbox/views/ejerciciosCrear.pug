doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title SandBox - Profesores
    link(href='/public/sandbox/css/bootstrap.min.css', rel='stylesheet')
    link(href='/public/sandbox/css/styles.css', rel='stylesheet')
    // Icons
    script(src='/public/sandbox/js/lumino.glyphs.js')
    style(type='text/css').
      .sb-ejer{
        background-color: rgba(0,0,0,0.3);
        padding-left: 20px;
        padding-bottom: 20px;
      }
      .sb-ejer h3{
        color:orange;
      }
      .sb-desc{
        padding-top: 20px;
        padding-right: 10px;
        padding-left: 10px;
        height:76vh;
      }
      .ejercicios{
        border-radius:15px;
        margin-top:15px;
        background-color: rgba(220,220,220,1);
      }
      .ejercicios p{
        color: black;
        font-size: large;
      }
      #body-pan{
        background-color: #9BD0F5;
      }
      #pane-techo{
        background-color: #5094C4;
        color: white;
      }
      .titulo{
        padding-top:10px;
      }
      .dale{
          margin-top:10px;
          margin-bottom:10px;
      }
  body
    //
      Navigation
      ==========================================
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#sidebar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/inicio')
            span.rol
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                svg.glyph.stroked.male-user
                  use(xlink:href='#stroked-male-user')
                label.nombreUser
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/perfil')
                    svg.glyph.stroked.male-user
                      use(xlink:href='/perfil')
                    |  Ver mi perfil
                li
                  a(href='/logout')
                    svg.glyph.stroked.cancel
                      use(xlink:href='#stroked-cancel')
                    |  Cerrar Sesión
      // /.container-fluid
    #sidebar-collapse.col-sm-3.col-lg-2.sidebar
      h2(style='margin-top: 17px; padding-left: 10px;') Menú Sandbox
      ul.nav.menu
        li
          a(href='/ejercicios')
            svg.glyph.stroked.notepad
              use(xlink:href='#stroked-notepad')
            | Ejercicios
        li.active
          a(href='/ejercicios/Crear')
            svg.glyph.stroked.blank.document
              use(xlink:href='#stroked-blank-document')
            |  Crear Ejercicio
        li.divider(role='presentation')
        li
          a(href='/perfil')
            svg.glyph.stroked.male-user
              use(xlink:href='#stroked-male-user')
            |  Perfil
    // /.sidebar
    .col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2.main
      .row
        ol.breadcrumb
          li
            a(href='/inicio')
              svg.glyph.stroked.home
                use(xlink:href='#stroked-home')
          li.active Ejercicios
      // /.row
      br
      .row
        .col-lg-12.panes
          // ============Aqui Trabajo================
          .panel.panel-default
            #pane-techo.panel-heading.col-md-12 Nuevo Ejercicio
            #body-pan.panel-body
              .sb-desc.col-md-12.col-sm-12
                .ejercicios.col-md-6
                  form(method='post', action='/ejercicios/crear')       
                      p.titulo Título:
                      input.form-control(type='text', name='titulo', placeholder='Título')
                      p.titulo Descripción:
                      textarea.form-control(type='text', name='descripcion', placeholder='Descripción')
                      p.titulo Datos de entrada:
                      input.form-control(type='text', name='datosDeEntrada', placeholder='Datos de Entrada')
                      p.titulo Datos de Salida:
                      input.form-control(type='text', name='datosDeSalida', placeholder='Datos de Salida')
                      p.titulo Etiquetas:
                      input.form-control(type='text', name='conjuntoDeEtiquetas', placeholder='Etiquetas')
                      p.titulo Dificultad:
                      select.form-control(type='text', name='dificultad')
                        option Easy
                        option Normal
                        option Hard
                      button.btn.btn-lg.btn-primary.dale(type='submit', name='go')  Crear

                        
   
          // ============/Aqui Trabajo================
          // ============Aqui tambien Trabajo================
          
          // ============Aqui tambien Trabajo================
        // /.row
      // /.row
    // /.main
    script(src='/public/sandbox/js/jquery-1.11.1.min.js')
    script(src='/public/sandbox/js/bootstrap.min.js')
    script(src='/public/js/mostrar-Usuario.js')